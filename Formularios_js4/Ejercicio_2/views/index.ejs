<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro de Productos Deportivos</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Registro de Productos Deportivos</h1>
  
  <form id="productoForm">
    <div>
      <label for="deporte">Deporte:</label>
      <input type="text" id="deporte" name="deporte" required>
    </div>
    
    <div>
      <label for="herramienta">Herramienta/Equipo:</label>
      <input type="text" id="herramienta" name="herramienta" required>
    </div>
    
    <div>
      <label for="precio">Precio ($):</label>
      <input type="number" id="precio" name="precio" min="0" step="0.01" required>
    </div>
    
    <div>
      <label for="categoria">Categoría:</label>
      <select id="categoria" name="categoria" required>
        <option value="">Seleccione...</option>
        <option value="Indumentaria">Indumentaria</option>
        <option value="Equipo">Equipo</option>
        <option value="Balones">Balones</option>
        <option value="gafas">gafas</option>
        <option value="Otro">Otro</option>
      </select>
    </div>
    
    <button type="submit">Agregar Producto</button>
  </form>
  
  <div id="mensaje" class="mensaje"></div>
  
  <h2>Productos Registrados</h2>
  <table id="tablaProductos">
    <thead>
      <tr>
        <th>Deporte</th>
        <th>Herramienta/Equipo</th>
        <th>Precio</th>
        <th>Categoría</th>
      </tr>
    </thead>
    <tbody>
      <% if (productos.length > 0) { %>
        <% productos.forEach(producto => { %>
          <tr>
            <td><%= producto.deporte %></td>
            <td><%= producto.herramienta %></td>
            <td>$<%= producto.precio.toFixed(2) %></td>
            <td><%= producto.categoria %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="4">No hay productos registrados</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <script src="/js/script.js"></script>
</body>
</html>