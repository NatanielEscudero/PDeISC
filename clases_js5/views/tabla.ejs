<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Animales Registrados</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="login-container">
    <h1>Complete los 5 campos</h1>
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>
      </div>
      <div class="form-group">
        <label for="jaula">Jaula de estadia (entre 1 y 5):</label>
        <input type="text" id="jaula" name="jaula" required>
      </div>
      <div class="form-group">
        <label for="tipo">Tipo de animal:</label>
        <input type="text" id="tipo" name="tipo" required>
      </div>
      <div class="form-group">
        <label for="peso">peso (kg):</label>
        <input type="number" id="peso" name="peso" required>
      </div>
      <button type="submit">agregar animal</button>
    </form>
  </div>

  <hr>

  <script>
    const zoo = <%- JSON.stringify(zoo.map(animal => ({
      nombre: animal.getNombre(),
      jaula: animal.getJaula(),
      peso: animal.getPeso(),
      tipo: animal.getTipo()
    }))) %>;

    document.write('<h2>Animales registrados</h2>');
    document.write('<table border="1"><tr><th>Nombre</th><th>Jaula</th><th>Peso</th><th>Tipo</th></tr>');

    zoo.forEach(animal => {
      document.write(`\<tr>
        <td>\${animal.nombre}</td>
        <td>\${animal.jaula}</td>
        <td>\${animal.peso}</td>
        <td>\${animal.tipo}</td>
      </tr>\ `);
    });

    document.write('</table>');
  </script>
</body>
</html>
